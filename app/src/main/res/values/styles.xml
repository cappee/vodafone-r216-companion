<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Overlay-->
    <style name="Overlay.Toolbar" parent="ThemeOverlay.MaterialComponents">
        <item name="colorControlNormal">?android:textColorPrimary</item>
    </style>

    <!--Widget-->
    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?android:textColorPrimary</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:theme">@style/Overlay.Toolbar</item>
    </style>

    <style name="Dialog.Progress" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/surface</item>
        <item name="android:textColor">@color/text</item>
    </style>
</resources>